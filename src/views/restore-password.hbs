<div class="container-fluid my-5" style="max-width: 50rem;">
    <div class="jumbotron">

    <h1>Restaurar contraseña</h1>
    <br>
    <form class="form" action="/api/session/restore" method="post" role="form" autocomplete="off">

        <div class="form-group m-2">
        <input id="email" name='email' placeholder="E-mail" class="form-control" type="text" required>
        </div>

        <div class="form-group m-2">
        <input id="password" name='password' placeholder="Nueva contraseña" class="form-control" type="password" required>
        </div>

        <div class="form-group">
        <input class="btn btn-success my-3" type="submit" value="Restaurar">
        </div>
    </form>

    <hr>
    <div class="text-left">
        <button class="btn btn-success my-3" onclick="location.href = '/api/session/register'">Registrate</button>
        <button class="btn btn-success my-3" onclick="location.href = '/api/session/login'">Login</button>
    </div>
    </div>
</div>
